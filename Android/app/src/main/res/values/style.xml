<?xml version="1.0" encoding="utf-8"?>
<!-- MS: 3/6/22 - first handful of styles for use in the Settings screen -->

<resources>
    <style name="HeaderLevelOne">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderLevelTwo">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BodyText">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Source: https://medium.com/mobile-app-development-publication/customizing-switch-using-xml-ca0d37204a86 -->
    <style name="SwitchDark">
        <item name="trackTint">@color/switch_track_color_dark</item>
        <item name="thumbTint">@color/switch_thumb_color_dark</item>
    </style>

    <style name="SeekBarDark">
        <item name="android:progressBackgroundTint">#9D93CC</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>
</resources>