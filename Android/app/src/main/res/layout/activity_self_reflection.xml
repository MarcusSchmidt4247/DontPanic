<?xml version="1.0" encoding="utf-8"?>
<!-- MS: 4/29/22 - updated constraints to work on more devices -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".SelfReflectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/selfReflectionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self-Reflection"
            android:textAlignment="center"
            android:textSize="120px"
            android:theme="@style/HeaderLevelOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/selfReflectionView2"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:paddingRight="40px"
            android:text="Have you experienced changes in sleeping or eating habits?"
            android:textAlignment="center"
            android:textSize="75px"
            android:theme="@style/HeaderLevelTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selfReflectionView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selfReflectionButton1"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle_btn"
            android:text="Yes"
            android:textAlignment="center"
            android:textSize="70px"
            android:theme="@style/LightButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selfReflectionView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selfReflectionButton2"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_btn"
            android:text="No"
            android:textAlignment="center"
            android:textSize="70px"
            android:theme="@style/LightButton"
            app:layout_constraintEnd_toEndOf="@id/selfReflectionButton1"
            app:layout_constraintTop_toBottomOf="@+id/selfReflectionButton1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>