<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".MentalExerciseThreeActivity">

    <TextView
        android:id="@+id/exerciseThreeView"
        android:layout_width="317dp"
        android:layout_height="64dp"

        android:fontFamily="sans-serif-black"
        android:text="Exercise 3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="110px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/exerciseThreeView2"
        android:layout_width="307dp"
        android:layout_height="95dp"

        android:fontFamily="sans-serif-black"
        android:text="Look for 5 things you can see, 4 things you can hear, 3 things you can touch, 2 things you can smell, 1 thing you can taste."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="50px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseThreeView"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/exerciseThreeButton"
        android:layout_width="165dp"
        android:layout_height="56dp"

        android:background="@drawable/round_btn"
        android:fontFamily="sans-serif-light"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="300"
        android:textSize="48px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <ImageView
        android:id="@+id/optionThreeImageView"
        android:layout_width="269dp"
        android:layout_height="213dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/exerciseThreeView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exercise_three"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
