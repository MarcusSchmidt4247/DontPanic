<?xml version="1.0" encoding="utf-8"?>
<!-- MS: 4/24/22 - accessibility pass (larger, black text) and added constraints and back button -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".MentalExerciseSelectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mentalView"
            android:layout_width="317dp"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-black"
            android:text="Mental Exercises"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textFontWeight="800"
            android:textSize="100px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mentalView2"
            android:layout_width="265dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-black"
            android:text="These exercises are meant to help you work through your panic or anxiety attacks"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="40px"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/mentalButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentalView" />

        <Button
            android:id="@+id/mentalButton"
            android:layout_width="252dp"
            android:layout_height="79dp"

            android:background="@drawable/round_btn"
            android:fontFamily="sans-serif-light"
            android:text="Option 1"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="45px"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mentalButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentalView2" />

        <Button
            android:id="@+id/mentalButton2"
            android:layout_width="252dp"
            android:layout_height="79dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/round_btn"
            android:fontFamily="sans-serif-light"
            android:text="Option 2"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="45px"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mentalButton3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentalButton" />

        <Button
            android:id="@+id/mentalButton3"
            android:layout_width="252dp"
            android:layout_height="79dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/round_btn"
            android:fontFamily="sans-serif-light"
            android:text="Option 3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45px"

            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mentalButton4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentalButton2" />

        <Button
            android:id="@+id/mentalButton4"
            android:layout_width="252dp"
            android:layout_height="79dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/round_btn"
            android:fontFamily="sans-serif-light"
            android:text="Option 4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45px"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentalButton3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:onClick="onBack"
        android:text="@string/backButtonLabel"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/rectangle_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
