<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".MentalExerciseOneActivity">

    <TextView
        android:id="@+id/exerciseOneView"
        android:layout_width="317dp"
        android:layout_height="64dp"

        android:fontFamily="sans-serif-black"
        android:text="Exercise 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="110px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/exerciseOneView2"
        android:layout_width="275dp"
        android:layout_height="60dp"

        android:fontFamily="sans-serif-black"
        android:text="Find eveything green in the room or the area you are in."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="50px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseOneView"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/exerciseOneButton"
        android:layout_width="141dp"
        android:layout_height="48dp"

        android:background="@drawable/round_btn"
        android:fontFamily="sans-serif-light"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="300"
        android:textSize="48px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <ImageView
        android:id="@+id/optionOneImageView"
        android:layout_width="174dp"
        android:layout_height="165dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/exerciseOneView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exercise_one"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
